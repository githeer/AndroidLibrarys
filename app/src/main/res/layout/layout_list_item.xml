<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ea">

    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/doll_item_checkBox"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:clickable="false"
            android:focusable="false"
            android:button="@null"
            android:background="@drawable/selector_list_check"/>

        <RelativeLayout
            android:background="@mipmap/ic_launcher"
            android:layout_margin="10px"
            android:layout_width="100px"
            android:layout_height="100px">
    <ImageView
        android:id="@+id/doll_item_img"
        android:layout_centerVertical="true"
        android:layout_margin="3px"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        </RelativeLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="50px">

        <TextView
            android:id="@+id/doll_item_title"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="thornfish"
            android:textColor="@android:color/black"
            android:textSize="32px"
            android:textStyle="bold"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="thornfish"
                android:textColor="@android:color/black"
                android:textSize="28px" />
            <TextView
                android:id="@+id/doll_item_inte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="20px"
                android:text="thornfish"
                android:textColor="@android:color/black"
                android:textSize="28px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="thornfish"
                android:textColor="@android:color/black"
                android:textSize="28px" />

            <RelativeLayout
                android:layout_marginLeft="100px"
                android:layout_gravity="center_vertical"
                android:layout_width="200px"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="thornfish"
                        android:textColor="@android:color/black"
                        android:textSize="28px" />
                    <TextView
                        android:id="@+id/doll_item_curr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="0"
                        android:textSize="28px" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="thornfish"
                        android:textColor="@android:color/black"
                        android:textSize="28px" />

                </LinearLayout>

                <View
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="2px"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="thornfish"
                android:textColor="@android:color/black"
                android:textSize="28px" />
            <TextView
                android:id="@+id/doll_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="0"
                android:layout_marginLeft="20px"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="thornfish"
                android:textColor="@android:color/black"
                android:textSize="28px" />
            <TextView
                android:id="@+id/doll_item_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="0"
                android:layout_marginLeft="20px"
                android:textSize="28px" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
</LinearLayout>